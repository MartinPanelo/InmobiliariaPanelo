@model IEnumerable<InmobiliariaPanelo.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<h1>Inmuebles</h1>


<br>
<a asp-action="InmuebleAgregar" class="btn btn-success" title="Agregar Inmueble">Agregar Inmueble</a>
<table class="table">
    <thead>
        <tr>
			<th>
                @Html.DisplayNameFor(model => model.Propietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadAmbientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
			<th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th> 
			<th>Acciones</th>
        </tr>
    </thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>					
					@(item.Propietario.Nombre + " " + item.Propietario.Apellido)
				</td>
				 <td>
					@Html.DisplayFor(modelItem => item.CantidadAmbientes)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Uso)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Direccion)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Tipo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Latitud)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Longitud)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Precio)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Disponible)
				</td>	
				<td>
              	  <a type="button" class="btn btn-danger" asp-action="InmuebleEliminar" asp-route-id="@item.IdInmueble" title="Eliminar inmueble"><span>Borrar</span></a>
              	  <a type="button" class="btn btn-warning" asp-action="InquilinoEditar" asp-route-id="@item.IdInmueble" title="Editar inmueble"><span>Editar</span></a>
              	  <a type="button" class="btn btn-primary" asp-action="VistaDetalles" asp-route-id="@item.IdInmueble" title="Detalles"><span>Detalles</span></a>
				</td>
			</tr>
			}
		</tbody>
</table>
