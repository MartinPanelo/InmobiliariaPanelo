@model InmobiliariaPanelo.Models.Inmueble
@{
    ViewData["Title"] = "Detalle";
}



<div class="row">
    <div class="col">
        <h1>@ViewData["detalle"]</h1>
        <hr/>
        <dl class="row align-items-center">        
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.IdInmueble)
            </dt>
            <dd class = "my-2 col-sm-9">
                @Html.DisplayFor(model => model.IdInmueble)
            </dd>
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.CantidadAmbientes)
            </dt>
            <dd class = "my-2 col-sm-9">
                @Html.DisplayFor(model => model.CantidadAmbientes)
            </dd>
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.Uso)
            </dt>
            <dd class = "my-2 col-sm-9">
                @Html.DisplayFor(model => model.Uso)
            </dd>
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class = "my-2 col-sm-9">
                @Html.DisplayFor(model => model.Direccion)
            </dd>
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd class = "my-2 col-sm-9">
                @Html.DisplayFor(model => model.Tipo)
            </dd>
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.Latitud)
            </dt>
            <dd class = "my-2 col-sm-9">
                @Html.DisplayFor(model => model.Latitud)
            </dd>
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.Longitud)
            </dt>
            <dd class = "my-2 col-sm-9">
                @Html.DisplayFor(model => model.Longitud)
            </dd>
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class = "my-2 col-sm-9">
                @Html.DisplayFor(model => model.Precio)
            </dd>
            <dt class = "my-2 col-sm-3">
                @Html.DisplayNameFor(model => model.Disponible)
            </dt>
            <dd class = "my-2 col-sm-9">
               @if(@Model.Disponible)
					{
						<input type="checkbox"  id="miCheckbox" checked style="display: none;">

						<i class="fa-solid fa-check fa-2xl" style="color: #00c20d;"></i>
					}
					else
					{
						<input type="checkbox"  id="miCheckbox" style="display: none;"> 
						<i value="@Model.Disponible"  class="fa-solid fa-xmark fa-2xl" style="color: #c20000;"></i>
					}
            </dd>
        </dl>
        <a class="mb-3 btn btn-primary" asp-action="Index">Volver al listado</a>
    </div>

    <div class="col">
        <h1>Detalles del propietario</h1>
        <hr />
        <dl class="row align-items-center">                
            <dt class = "my-2 col-sm-2">
                @Html.DisplayNameFor(model => model.Propietario.Nombre)
            </dt>
            <dd class = "my-2 col-sm-10">
                @Html.DisplayFor(model => model.Propietario.Nombre)
            </dd>
            <dt class = "my-2 col-sm-2">
                @Html.DisplayNameFor(model => model.Propietario.Apellido)
            </dt>
            <dd class = "my-2 col-sm-10">
                @Html.DisplayFor(model => model.Propietario.Apellido)
            </dd>
            <dt class = "my-2 col-sm-2">
                @Html.DisplayNameFor(model => model.Propietario.Dni)
            </dt>
            <dd class = "my-2 col-sm-10">
                @Html.DisplayFor(model => model.Propietario.Dni)
            </dd>
                        <dt class = "my-2 col-sm-2">
                @Html.DisplayNameFor(model => model.Propietario.Telefono)
            </dt>
            <dd class = "my-2 col-sm-10">
                @Html.DisplayFor(model => model.Propietario.Telefono)
            </dd>
                        <dt class = "my-2 col-sm-2">
                @Html.DisplayNameFor(model => model.Propietario.Email)
            </dt>
            <dd class = "my-2 col-sm-10">
                @Html.DisplayFor(model => model.Propietario.Email)
            </dd>
        </dl>
    </div>
</div>
